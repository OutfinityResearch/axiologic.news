{
    "workDir": ".",
    "dependencies": [
        {
            "name": "opendsu-sdk",
            "src": "http://github.com/opendsu/opendsu-releases.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./src",
                    "collectLog": false
                }
            ]
        },
        {
            "name": "WebSkel",
            "src": "https://github.com/OutfinityResearch/webskel-releases.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./src/apihub-root",
                    "collectLog": false
                }
            ]
        },
        {
            "name": "Gatekeeper",
            "src": "https://github.com/OpenDSU/Gatekeeper.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./src",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd src/Gatekeeper && npm install"
                },
                {
                    "type": "copy",
                    "src": "./src/Gatekeeper/authenticator/totp/qrcode",
                    "target": "./src/apihub-root/scripts/qrcode",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        },
        {
            "name": "EmailPlugin",
            "src": "https://github.com/AssistOS-AI/MailJetPlugin",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./src/Gatekeeper",
                    "collectLog": false
                }
            ]
        },
        {
            "name": "achillesUtils",
            "src": "https://github.com/AssistOS-AI/achillesUtils.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./src/apihub-root",
                    "collectLog": false
                }
            ]
        }
    ],
    "wallet-build": [
        {
            "name": "wallet-build",
            "actions": [
                {
                    "type": "copy",
                    "src": "./src/opendsu-sdk/builds/output/versionLessBoot.js",
                    "target": "./src/apihub-root/bundles/versionLessBoot.js",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        }
    ],
    "build": [
        {
            "name": "build-all",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "node ./node_modules/octopus/scripts/setEnv --file=../../../env.json \"node ./bin/octopusRun.js wallet-build\""
                }
            ]
        }
    ]
}
